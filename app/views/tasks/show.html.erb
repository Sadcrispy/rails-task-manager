<div class="container">
  <h2>🇵🇱 <%= @task.title %> 🇵🇱</h2>
  <p><%= @task.details %></p>
  <br>
  <%= link_to "Edit this task", edit_path, class: "text-decoration-none text-danger" %>
  <br>
  <%= link_to "Back to tasks list", tasks_path, class: "text-decoration-none text-danger" %>
  <br>
  <%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none text-danger"
  %>
</div>
